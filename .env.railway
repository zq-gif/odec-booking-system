# Railway Environment Variables Template
# Copy these to Railway Dashboard > Variables

# Application
APP_NAME="ODEC Booking System"
APP_ENV=production
APP_DEBUG=false
APP_URL=${RAILWAY_PUBLIC_DOMAIN}

# Generate this: php artisan key:generate --show
APP_KEY=

# Database (Railway MySQL Plugin)
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}

# Session & Cache
SESSION_DRIVER=file
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Filesystem
FILESYSTEM_DISK=public

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Trusted Proxies (Railway)
TRUST_PROXIES=*

# Railway
PORT=8000
